class Solution {
    public int tribonacci(int n) {
        int[] ans = new int[n + 1];
        for(int i = 0; i < ans.length; i++) {
            ans[i] = -1;
        }
        ans[0] = 0;
        ans[1] = 1;
        ans[2] = 1;
        recursion(ans, n);
        return ans[n];
    }
    
    public int recursion(int[] ans, int n) {
        if(ans[n] != -1) return ans[n];
        ans[n] = recursion(ans, n - 1) + recursion(ans, n - 2) + recursion(ans, n - 3);
        return ans[n];
    }
}
